<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:id="@+id/videosearch"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:onClick="searchvideo"/>
        <ImageView
            android:id="@+id/ivtitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:paddingBottom="5dp"
            android:paddingLeft="60dp"
            android:paddingTop="5dp"
            android:src="@drawable/titlevideo" />
        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:gravity="left|center_vertical|center"
            android:text="  美食视频"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/iconfont_add"
            android:id="@+id/add"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/photo1"
                android:src="@drawable/chicken1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="playvideo1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="飘香拌面"
                android:gravity="center" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/photo2"
                android:src="@drawable/chicken1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="playvideo2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="排骨焖饭"
                android:gravity="center" />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/photo3"
                android:src="@drawable/chicken1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="playvideo3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="凉拌鸡爪"
                android:gravity="center" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/photo4"
                android:src="@drawable/chicken1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="playvideo4"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="鸡蛋饼"
                android:gravity="center" />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/photo5"
                android:src="@drawable/chicken1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="playvideo1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="飘香拌面"
                android:gravity="center" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/photo6"
                android:src="@drawable/chicken1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:onClick="playvideo2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="排骨焖饭"
                android:gravity="center" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>

